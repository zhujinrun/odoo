<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">图书列表</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_release"/>
                <field name="release_days"/>
                <field name="publisher_city"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">图书信息</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="make_available" type="object" string="可用"/>
                    <button name="make_borrowed" type="object" string="借出"/>
                    <button name="make_lost" type="object" string="遗失"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <!-- <field name="author_ids" widget="many2many_tags"/> -->
                            <field name="state"/>
                            <field name="pages"/>
                            <field name="notes"/>
                            <field name="retail_price"/>
                            <field name="currency_id"/>
                            <field name="publisher_city"/>
                        </group>
                        <group>
                            <field name="short_name"/>
                            <field name="date_release"/>
                            <field name="release_days"/>
                            <field name="date_updated"/>
                            <field name="cover" widget="image" class="oe_avater"/>
                            <field name="reader_rating"/>
                            <field name="cost_price"/>
                            <field name="publisher_id"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="作者详情">
                            <field name="author_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="authored_book_count"/>
                                    <field name="authored_book_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">图书搜索</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter name="without_author" string="未知作者" domain="[('author_ids', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">图书列表</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="library_base_menu" name="图书管理" />
    <menuitem id="library_book_menu" name="图书" parent="library_base_menu" action="library_book_action"/>
</odoo>