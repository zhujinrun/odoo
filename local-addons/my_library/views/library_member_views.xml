<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_member_view_tree" model="ir.ui.view">
        <field name="name">会员列表</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="member_number"/>
                <field name="date_of_birth"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="library_member_view_form" model="ir.ui.view">
        <field name="name">会员信息</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="member_number"/>
                            <field name="date_of_birth"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="country_id"/>
                            <field name="state_id" string="省份"/>
                            <field name="city"/>
                            <field name="street"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_member_action" model="ir.actions.act_window">
        <field name="name">会员列表</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="library_member_menu" name="会员" parent="library_base_menu" action="library_member_action"/>
</odoo>